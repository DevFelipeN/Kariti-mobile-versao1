<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadEscolaActivity">

    <include
        android:id="@+id/include"
        layout="@layout/appbar"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include"
        app:srcCompat="@mipmap/escola" />

    <EditText
        android:id="@+id/editTextNomeEscola"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/borda_botao"
        android:ems="10"
        android:hint="@string/nomeSchool"
        android:inputType="text"
        android:paddingStart="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editTextBairro"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/borda_botao"
        android:ems="10"
        android:hint="@string/bairroSchool"
        android:inputType="text"
        android:paddingStart="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNomeEscola" />

    <Button
        style="@style/BUTTONSTYLE"
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="@string/buttonCadastrar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBairro"
        app:layout_constraintVertical_bias="0.094" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNomeEscola"
        app:layout_constraintStart_toStartOf="@+id/editTextNomeEscola"
        app:layout_constraintTop_toTopOf="@+id/editTextNomeEscola"
        app:srcCompat="@mipmap/usuario" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextBairro"
        app:layout_constraintStart_toStartOf="@+id/editTextBairro"
        app:layout_constraintTop_toTopOf="@+id/editTextBairro"
        app:srcCompat="@mipmap/usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>