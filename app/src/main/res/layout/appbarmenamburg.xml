<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/myToolBarMenuHamburg"
    android:layout_height="?attr/actionBarSize">

    <ImageButton
        android:id="@+id/btn_menu_amb"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:background="@color/tranparente"
        android:textColor="@android:color/black"
        android:src="@mipmap/ic_hamb"
        android:contentDescription="@string/btnVoltar"/>

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:contentDescription="@string/btnMenuPontos"
        android:padding="8dp"
        android:src="@mipmap/menuptn" />

</androidx.appcompat.widget.Toolbar>